{
  "name": "jsspeccy",
  "version": "3.0.0",
  "description": "a ZX Spectrum emulator in the browser",
  "main": "jsspeccy.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "asbuild:debug": "asc assembly/index.ts --target debug",
    "asbuild:release": "asc assembly/index.ts --target release",
    "build:js": "webpack",
    "build:static": "cp static/* dist/",
    "build": "npm run asbuild:debug && npm run build:js && npm run build:html",
    "build:release": "npm run asbuild:release && npm run build:js && npm run build:html",
    "watch": "npm-watch"
  },
  "watch": {
    "asbuild:debug": {
      "patterns": "assembly/*.ts",
      "extensions": "ts"
    },
    "build:js": {
      "patterns": ["js/*.js", "build/*.js"],
      "extensions": "js"
    },
    "build:static": {
      "patterns": ["static/*.html", "static/*.rom"],
      "extensions": ["html", "rom"]
    }
  },
  "author": "Matt Westcott",
  "license": "ISC",
  "devDependencies": {
    "assemblyscript": "^0.19.6",
    "npm-watch": "^0.10.0",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2"
  }
}
