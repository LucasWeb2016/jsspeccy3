{
  "name": "jsspeccy",
  "version": "3.0.0",
  "description": "a ZX Spectrum emulator in the browser",
  "main": "jsspeccy.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "asbuild:untouched": "asc assembly/index.ts --target debug",
    "asbuild:optimized": "asc assembly/index.ts --target release",
    "asbuild": "npm run asbuild:untouched && npm run asbuild:optimized",
    "build:js": "webpack",
    "build:html": "cp html/*.html dist/",
    "build": "npm run asbuild && npm run build:js && npm run build:html",
    "watch": "npm-watch"
  },
  "watch": {
    "asbuild:untouched": {
      "patterns": "assembly/*.ts",
      "extensions": "ts"
    },
    "build:js": {
      "patterns": ["js/*.js", "build/*.js"],
      "extensions": "js"
    },
    "build:html": {
      "patterns": "html/*.html",
      "extensions": "html"
    }
  },
  "author": "Matt Westcott",
  "license": "ISC",
  "devDependencies": {
    "assemblyscript": "^0.19.6",
    "npm-watch": "^0.10.0",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2"
  }
}
